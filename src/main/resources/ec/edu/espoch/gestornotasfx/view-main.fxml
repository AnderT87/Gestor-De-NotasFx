<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" prefHeight="314.0" prefWidth="464.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ec.edu.espoch.gestornotasfx.controller">

    <!-- ENCABEZADO -->
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #0A0F5C; -fx-padding: 20;">
            <Label style="-fx-text-fill: white;                           -fx-font-size: 22px;                           -fx-font-weight: bold;" text="GESTOR DE NOTAS" />
        </HBox>
    </top>

    <!-- MENÃš LATERAL -->
    <left>
        <VBox spacing="20" style="-fx-background-color: #0D6EFD;                      -fx-padding: 30;                      -fx-pref-width: 200;">

            <Button onAction="#irDocentes" style="-fx-background-color: #0B5ED7;                            -fx-text-fill: white;                            -fx-font-weight: bold;" text="DOCENTES" />

            <Button onAction="#irAsignaturas" style="-fx-background-color: #0B5ED7;                            -fx-text-fill: white;                            -fx-font-weight: bold;" text="ASIGNATURAS" />

            <Button onAction="#irEstudiantes" style="-fx-background-color: #0B5ED7;                            -fx-text-fill: white;                            -fx-font-weight: bold;" text="ESTUDIANTES" />

            <Button onAction="#irNotas" style="-fx-background-color: #0B5ED7;                            -fx-text-fill: white;                            -fx-font-weight: bold;" text="ASIG. ESTUDIANTES" />
        </VBox>
    </left>

    <!-- CONTENIDO CENTRAL -->
    <center>
        <AnchorPane fx:id="contenedorCentral" style="-fx-background-color: #F5F5F5;" />
    </center>

</BorderPane>
