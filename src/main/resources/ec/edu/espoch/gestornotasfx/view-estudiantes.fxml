<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ec.edu.espoch.gestornotasfx.controller.EstudiantesController">

    <top>
        <HBox alignment="CENTER"
              style="-fx-background-color: #0B1C6D; -fx-padding: 20;">
            <Label text="GESTOR DE NOTAS"
                   style="-fx-text-fill: white;
                          -fx-font-size: 24px;
                          -fx-font-weight: bold;" />
        </HBox>
    </top>

    <left>
        <VBox spacing="15"
              alignment="TOP_CENTER"
              style="-fx-background-color: #0D6EFD; -fx-padding: 20;"
              prefWidth="200">

            <Button text="DOCENTES" prefWidth="160" onAction="#menuDocentes"/>
            <Button text="ASIGNATURAS" prefWidth="160" onAction="#menuAsignaturas"/>
            <Button text="ESTUDIANTES" prefWidth="160" onAction="#menuEstudiantes"/>
            <Button text="ASIG. ESTUDIANTES" prefWidth="160" onAction="#menuAsigEstudiantes"/>

        </VBox>
    </left>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <Label text="GESTIONAR ESTUDIANTES"
                   style="-fx-font-size: 20px;
                          -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="10">

                <Label text="Código:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCodigo" promptText="Ingrese ID"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                
                <Button text="BUSCAR"
                        onAction="#buscar"
                        style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold;"
                        GridPane.rowIndex="0" 
                        GridPane.columnIndex="2"/>

                <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Apellido:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtApellido"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Correo:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCorreo" prefWidth="250"
                           GridPane.rowIndex="3" GridPane.columnIndex="1" 
                           GridPane.columnSpan="2"/>

            </GridPane>

            <HBox spacing="10">
                <Button text="AGREGAR"
                        onAction="#agregar"
                        style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-font-weight: bold;"/>

                <Button text="ACTUALIZAR"
                        onAction="#actualizar"
                        style="-fx-background-color: #17A2B8; -fx-text-fill: white; -fx-font-weight: bold;"/>

                <Button text="ELIMINAR"
                        onAction="#eliminar"
                        style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-font-weight: bold;"/>
                
                
            </HBox>

            <TableView fx:id="tablaEstudiantes" prefHeight="300" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colCodigo" text="Código" prefWidth="100"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
                    <TableColumn fx:id="colApellido" text="Apellido" prefWidth="150"/>
                    <TableColumn fx:id="colCorreo" text="Correo Institucional" prefWidth="250"/>
                </columns>
                
            </TableView>

        </VBox>
    </center>

</BorderPane>