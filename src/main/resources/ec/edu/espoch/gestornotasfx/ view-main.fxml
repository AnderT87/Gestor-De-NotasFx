<BorderPane prefHeight="600" prefWidth="1000"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ec.edu.espoch.gestornotasfx.controller.VistaGeneralController">

    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER"
              style="-fx-background-color: #0B1C6D; -fx-padding: 20;">
            <Label text="CONSULTA DE NOTAS POR PERIODO"
                   style="-fx-text-fill: white;
                          -fx-font-size: 22px;
                          -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- CONTENIDO -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <!-- BUSQUEDA -->
            <HBox spacing="10">
                <Label text="Periodo:"/>
                <TextField fx:id="txtPeriodo" prefWidth="200"/>
                <Button text="BUSCAR"
                        onAction="#buscar"
                        style="-fx-background-color: #0D6EFD; -fx-text-fill: white;"/>
            </HBox>

            <!-- TABLA -->
            <TableView fx:id="tabla" prefHeight="400">

                <columns>
                    <TableColumn fx:id="colDocente" text="Docente" prefWidth="180"/>
                    <TableColumn fx:id="colAsignatura" text="Asignatura" prefWidth="180"/>
                    <TableColumn fx:id="colEstudiante" text="Estudiante" prefWidth="180"/>
                    <TableColumn fx:id="colRecuperacion" text="RecuperaciÃ³n" prefWidth="120"/>
                    <TableColumn fx:id="colMedio" text="Medio Ciclo" prefWidth="120"/>
                    <TableColumn fx:id="colFinal" text="Fin Ciclo" prefWidth="120"/>
                </columns>

            </TableView>

        </VBox>
    </center>

</BorderPane>
