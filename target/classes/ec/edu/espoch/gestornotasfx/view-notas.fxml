<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane prefHeight="600.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ec.edu.espoch.gestornotasfx.controller.Asigna_EstudiantesController">

    <top>
        <HBox alignment="CENTER"
              style="-fx-background-color: #0B1C6D; -fx-padding: 20;">
            <Label text="GESTOR DE NOTAS - ESPOCH"
                   style="-fx-text-fill: white; 
                          -fx-font-size: 24px; 
                          -fx-font-weight: bold;" />
        </HBox>
    </top>

    <left>
        <VBox spacing="15"
              alignment="TOP_CENTER"
              style="-fx-background-color: #0D6EFD; -fx-padding: 20;"
              prefWidth="200">

            <Button text="DOCENTES" prefWidth="160" onAction="#menuDocentes"/>
            <Button text="ASIGNATURAS" prefWidth="160" onAction="#menuAsignaturas"/>
            <Button text="ESTUDIANTES" prefWidth="160" onAction="#menuEstudiantes"/>
            <Button text="NOTAS" prefWidth="160" onAction="#menuAsigEstudiantes" 
                    style="-fx-background-color: #0B1C6D; -fx-text-fill: white; -fx-font-weight: bold;"/>

        </VBox>
    </left>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <Label text="ASIGNACIÓN DE ESTUDIANTES Y NOTAS"
                   style="-fx-font-size: 20px; 
                          -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="10">

                <Label text="Código Estudiante:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCodEstudiante" promptText="ID del alumno"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Button text="BUSCAR" onAction="#buscarEstudiante"
                        style="-fx-background-color: #6c757d; -fx-text-fill: white;"
                        GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <Label fx:id="lblNombreEstudiante" text="Nombre: ---" 
                       style="-fx-font-weight: bold; -fx-text-fill: #0D6EFD;"
                       GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <Label text="Código Asignatura:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCodAsignatura" promptText="ID de la materia"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Button text="BUSCAR" onAction="#buscarAsignatura"
                        style="-fx-background-color: #6c757d; -fx-text-fill: white;"
                        GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <Label fx:id="lblNombreAsignatura" text="Materia: ---" 
                       style="-fx-font-weight: bold; -fx-text-fill: #0D6EFD;"
                       GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                <Label text="Medio Ciclo:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtMedioCiclo" promptText="0.00"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Fin Ciclo:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <TextField fx:id="txtFinCiclo" promptText="0.00"
                           GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                <Label text="Recuperación:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtRecuperacion" promptText="0.00"
                           GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                
                <Label text="Promedio:" GridPane.rowIndex="3" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
                <Label fx:id="lblPromedio" text="0.00" style="-fx-font-weight: bold; -fx-font-size: 14px;"
                       GridPane.rowIndex="3" GridPane.columnIndex="3"/>

            </GridPane>

            <HBox spacing="10">
                <Button text="AGREGAR" onAction="#agregar"
                        style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-font-weight: bold;"/>

                <Button text="ACTUALIZAR" onAction="#actualizar"
                        style="-fx-background-color: #17A2B8; -fx-text-fill: white; -fx-font-weight: bold;"/>

                <Button text="ELIMINAR" onAction="#eliminar"
                        style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>

            <TableView fx:id="tablaAsignaciones" prefHeight="300" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colEstudiante" text="Estudiante" prefWidth="200"/>
                    <TableColumn fx:id="colAsignatura" text="Asignatura" prefWidth="180"/>
                    <TableColumn fx:id="colMedio" text="Medio Ciclo" prefWidth="100"/>
                    <TableColumn fx:id="colFin" text="Fin Ciclo" prefWidth="100"/>
                    <TableColumn fx:id="colRecu" text="Recuperación" prefWidth="100"/>
                    <TableColumn fx:id="colPromedio" text="Promedio" prefWidth="100"/>
                </columns>
                
            </TableView>

        </VBox>
    </center>

</BorderPane>